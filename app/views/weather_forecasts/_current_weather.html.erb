<%# locals: (weather:) -%>
<div class="card mb-4 gradient-custom" style="border-radius: 25px;">
    <div class="card-body p-4" id="current_weather_section">
        <div class="carousel-item active">
            <div class="d-flex justify-content-between mb-4 pb-2">
                <div>
                    <h2 class="display-2"><strong> <%= weather['currentConditions']['temp'] %> 째F</strong></h2>
                    <p class="text-muted mb-0"> <%= weather['address'] %></p>
                    <p class="text-muted mb-0"> Feels like: <%=  weather['currentConditions']['feelslike'] %>째F</p>
                    <p class="text-muted mb-0"> High: <%= weather['days'][0]['tempmax'] %>째 / Low: <%= weather['days'][0]['tempmin'] %>째</p>
                    <p class="text-muted mb-0"> Cache data: <%= @cache_data %></p>
                </div>
                <div>
                    <p class="text-muted mb-0"> Current Conditions: <i class="fas <%= @weather_icons[weather['currentConditions']['icon']] %> fa-2x mb-3" style="color: #ddd;"></i></p>
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-weather/ilu3.webp"
                        width="150px">
                </div>
            </div>    
            
        </div>
    </div>
</div>

